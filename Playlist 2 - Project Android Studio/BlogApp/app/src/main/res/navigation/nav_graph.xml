<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.blogapp.ui.fragment.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.blogapp.ui.fragment.RegisterFragment"
        android:label="@string/register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.blogapp.ui.fragment.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_addBlogFragment"
            app:destination="@id/addBlogFragment" />
        <action
            android:id="@+id/action_homeFragment_to_savedFragment"
            app:destination="@id/savedFragment" />
    </fragment>

    <fragment
        android:id="@+id/addBlogFragment"
        android:name="com.example.blogapp.ui.fragment.AddBlogFragment"
        android:label="@string/add_blog"
        tools:layout="@layout/fragment_add_blog">
        <action
            android:id="@+id/action_addBlogFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/addBlogFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/savedFragment"
        android:name="com.example.blogapp.ui.fragment.SavedFragment"
        android:label="@string/saved"
        tools:layout="@layout/fragment_saved">
        <action
            android:id="@+id/action_savedFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/savedFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>

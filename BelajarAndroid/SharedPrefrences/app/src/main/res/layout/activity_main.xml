<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ“¦ Inventori Barang"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#263238"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- CardView untuk Input -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF">

            <EditText
                android:id="@+id/etBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Barang"
                android:inputType="text"
                android:textColor="#37474F"
                android:textSize="16sp"
                android:drawableStart="@android:drawable/ic_input_add"
                android:drawablePadding="10dp"
                android:backgroundTint="#90A4AE" />

            <EditText
                android:id="@+id/etStok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Jumlah Stok"
                android:inputType="number"
                android:textColor="#37474F"
                android:textSize="16sp"
                android:drawableStart="@android:drawable/ic_menu_sort_by_size"
                android:drawablePadding="10dp"
                android:backgroundTint="#90A4AE" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tombol -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/cardInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="SIMPAN DATA"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#43A047"
            android:onClick="simpan"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:drawablePadding="8dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="LIHAT DATA"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#1E88E5"
            android:onClick="tampil"
            android:drawableLeft="@android:drawable/ic_menu_view"
            android:drawablePadding="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
